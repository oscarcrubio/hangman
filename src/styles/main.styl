/*
*
    Game view Syles
*
*/

#top-container    
    .game-header
        background-color green
        width: 100%
        display flex
        justify-content: space-between
        align-items: center
        #help
            background-color blue
            font-family: arial
            font-weight: bold
            font-size: 2em
            background main-light            
            width: 60px
            height: 60px
            display: flex
            justify-content: center
            align-items: center
            border-radius: 35px
            cursor: pointer
            box-shadow: 1px 5px 10px rgba(21,5,10,.3)
        #player-name
            color: main-light
            font-size: 2em
        #time-counter
            color: main-light
            font-size: 2em
#main-container
    .game-view
        background-color brown
        height: 100%
        width: 100%
        display: grid
        grid-template-columns: repeat(12,1fr)
        .game-words
            grid-column: 5/13
            background-color orange
            display: grid
            grid-template-rows: 1fr 1fr
            .word-container
                grid-row: 1/2            
            .letters-container
                grid-row: 2/3
                background-color blue
                span
                    color: main-light
                    font-size: 70px
                    padding: 5px
                    margin: 5px 10px
                    cursor pointer



            
